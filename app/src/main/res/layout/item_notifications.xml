<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_white_yellow_border"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/iciel_gotham_medium"
                    android:maxLines="1"
                    android:text="New Order Received"
                    android:textColor="@color/black_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:maxLines="1"
                    android:text="Joyal, Thrissur ordered some items."
                    android:textColor="@color/black_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:maxLines="1"
                    android:text="23 September 2020, 11:20 AM"
                    android:textSize="12sp" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>