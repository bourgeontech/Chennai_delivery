<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvShopNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/homepagebaukasten_bold"
            android:textColor="@color/black"
            android:text="Shop 1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvShopNo"
            android:background="@drawable/ripple_yellow_border"
            android:paddingStart="14dp"
            android:paddingTop="14dp"
            android:paddingEnd="14dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:id="@+id/shopactionlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shopDirction"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:src="@drawable/direction" />
                <ImageView
                    android:id="@+id/shopCall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/telephone" />
            </LinearLayout>
            <View
                android:id="@+id/viewseperator"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/shopactionlayout"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/detaillayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/acceptlayout"
                android:layout_toEndOf="@+id/viewseperator"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="Order ID : "/>

                    <TextView
                        android:id="@+id/tvOrderiD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:maxLines="1"
                        android:text="4512"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/gray_medium"
                        android:text="Shop Name : "/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:text=" Mayura Backery  "
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/gray_medium"
                        android:maxLines="2"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/gray_medium"
                        android:text="Location : "/>

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:text="bangalore urban,kottarayikkal house annallurpo"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:maxLines="3"
                        android:textSize="12sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvphonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:text="+91 9562252202"
                    android:gravity="left"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:maxLines="3"
                    android:textSize="12sp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/acceptlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >


                <TextView
                    android:id="@+id/btnPickup"
                    android:layout_width="75dp"
                    android:layout_height="28dp"
                    android:background="@drawable/btn_bg_green"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:drawableTint="@color/green"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:padding="6dp"
                    android:text="Pick Up"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/tvPicked"
                    android:layout_width="75dp"
                    android:layout_height="28dp"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:drawableTint="@color/green"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:padding="6dp"
                    android:text="Picked"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:visibility="gone"/>


            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>