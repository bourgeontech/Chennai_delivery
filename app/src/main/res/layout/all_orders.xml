<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_yellow_border"
            android:paddingStart="24dp"
            android:paddingTop="14dp"
            android:paddingEnd="14dp"
            android:paddingBottom="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/acceptlayout"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="Order ID : "/>

                    <TextView
                        android:id="@+id/tvOrderiD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:maxLines="1"
                        android:text="4512"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/gray_medium"
                        android:text="Delivered Date : "/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:text="23-01-2021"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:maxLines="1"
                        android:textSize="12sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/gray_medium"
                        android:text="Delivered Time : "/>

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:text="06:34:10"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:maxLines="1"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/gray_medium"
                        android:text="From : "/>

                    <TextView
                        android:id="@+id/tvFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:text="bangalore urban,kottarayikkal house annallurpo"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:maxLines="2"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:textColor="@color/gray_medium"
                        android:text="To      : "/>

                    <TextView
                        android:id="@+id/tvTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:text="bangalore urban,kottarayikkal house annallurpo"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:maxLines="3"
                        android:textSize="12sp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/acceptlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/tvKm"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:layout_alignParentEnd="true"
                    android:drawableTint="@color/green"
                    android:fontFamily="@font/homepagebaukasten_bold"
                    android:padding="6dp"
                    android:textSize="15dp"
                    android:text="24 KM"
                    android:textColor="@color/gray_medium" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>